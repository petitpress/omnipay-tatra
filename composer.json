{
    "name": "tomaj/omnipay-tatra",
    "type": "library",
    "description": "Tatrabank driver for the Omnipay payment processing library",
    "keywords": [
        "tatrapay",
        "cardpay",
        "comfortpay",
        "gateway",
        "merchant",
        "omnipay",
        "pay",
        "payment"
    ],
    "homepage": "https://github.com/tomaj/omnipay-tatra",
    "license": "MIT",
    "authors": [
        {
            "name": "Tomas Majer",
            "email": "tomasmajer@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": { 
            "Omnipay\\": "src/"
        }
    },
    "require": {
        "ext-openssl": "*",
        "ext-hash": "*",
        "ext-soap": "*",
        "ext-SimpleXML": "*",
        "omnipay/common": "~3.0"
    },
    "require-dev": {
        "omnipay/tests": "~3.0|^4.0",
        "squizlabs/php_codesniffer": "3.*"
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": false
        }
    }
}
